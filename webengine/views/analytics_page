<script defer src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script type="module">
  const currentUser = localStorage.getItem("user");

  if (currentUser) {
    const user = JSON.parse(currentUser);
    $("#welcome-text").text(`Welcome, ${user.firstName}!`);
    $("#profile-img").attr("src", user.profilePhoto);
  }

  $(document).ready(function () {
    // Helper function to create mini charts
    function createMiniChart(elementId, data) {
      const ctx = document.getElementById(elementId).getContext("2d");
      return new Chart(ctx, {
        type: "line",
        data: {
          labels: Array(10).fill(""),
          datasets: [
            {
              data: data,
              borderColor: "#6c5ce7",
              borderWidth: 2,
              tension: 0.4,
              pointRadius: 0,
            },
          ],
        },
        options: {
          responsive: true,
          maintainAspectRatio: true,
          aspectRatio: 3,
          plugins: {
            legend: {
              display: false,
            },
          },
          scales: {
            x: {
              display: false,
            },
            y: {
              display: false,
            },
          },
        },
      });
    }

    // Create mini charts
    createMiniChart("reachChart", [15, 13, 16, 14, 15, 17, 14, 16, 15, 16]);
    createMiniChart(
      "impressionsChart",
      [35, 32, 38, 34, 36, 39, 35, 37, 34, 36]
    );
    createMiniChart(
      "engagementChart",
      [9, 8.5, 8.7, 8.3, 8.6, 8.4, 8.8, 8.5, 8.7, 8.6]
    );
    createMiniChart(
      "followersChart",
      [180, 175, 185, 178, 182, 180, 184, 179, 183, 182]
    );

    // Create main audience chart
    const audienceCtx = document
      .getElementById("audienceChart")
      .getContext("2d");
    new Chart(audienceCtx, {
      type: "line",
      data: {
        labels: [
          "Feb",
          "Mar",
          "Apr",
          "May",
          "Jun",
          "Jul",
          "Aug",
          "Sep",
          "Oct",
          "Nov",
          "Dec",
          "Jan",
        ],
        datasets: [
          {
            label: "Audience Growth",
            data: [
              30000, 35000, 32000, 40000, 45000, 43000, 47000, 45000, 50000,
              52000, 55000, 58000,
            ],
            borderColor: "#6c5ce7",
            backgroundColor: "rgba(108, 92, 231, 0.1)",
            fill: true,
            tension: 0.4,
          },
        ],
      },
      options: {
        responsive: true,
        maintainAspectRatio: true,
        aspectRatio: 2,
        plugins: {
          legend: {
            display: false,
          },
        },
        scales: {
          y: {
            beginAtZero: true,
            grid: {
              display: true,
              drawBorder: false,
            },
          },
          x: {
            grid: {
              display: false,
            },
          },
        },
      },
    });
  });
</script>
