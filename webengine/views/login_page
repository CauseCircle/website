<script type="module">
  // Toggle hero image loading/fetch priority for mobile vs desktop
  (function () {
    try {
      const heroImg = document.getElementById("hero-img");
      if (!heroImg) return;

      const setLoadingHints = () => {
        const isMobile = window.matchMedia("(max-width: 991.98px)").matches;
        if (isMobile) {
          heroImg.setAttribute("loading", "lazy");
          heroImg.removeAttribute("fetchpriority");
        } else {
          heroImg.removeAttribute("loading");
          heroImg.setAttribute("fetchpriority", "high");
        }
      };

      setLoadingHints();
      window.addEventListener("resize", setLoadingHints);
    } catch (_) {}
  })();
  const claimListingRedirectUrl = localStorage.getItem(
    "claimListingRedirectUrl"
  );

  if (claimListingRedirectUrl) {
    $("#login-title").text("Sign Up to Claim Your Listing");
    $("#login-description").text(
      "This will allow you to manage and edit your Nonprofit, invite admins and followers, and review stories."
    );

    // Clear the localStorage item when the page is unloaded
    window.addEventListener("unload", () => {
      localStorage.removeItem("claimListingRedirectUrl");
    });
  }
  // get follow-npo param
  const followNpo = new URLSearchParams(window.location.search).get(
    "follow_npo"
  );
  if (followNpo) {
    const loginModal = new bootstrap.Modal(
      document.getElementById("loginPromptModal")
    );
    loginModal.show();
  }
</script>
